root = true

# General
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Python
[*.py]
indent_style = space
indent_size = 4

# C++
[*.{cpp,h,tcc}]
indent_style = space
indent_size = 2

# Web
[*.{js,ts,html,css}]
indent_style = space
indent_size = 2

# YAML
[*.{yaml,yml}]
indent_style = space
indent_size = 2
quote_type = single

# JSON
[*.json]
indent_style = space
indent_size = 2
